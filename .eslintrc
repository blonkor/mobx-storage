{
  "extends": ["eslint-config-airbnb", "eslint-config-prettier"],
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-quotes": 0,
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "quotes": [1, "single"],
    "comma-style": [2, "last"],
    "no-restricted-syntax": 0,
    "no-unused-expressions": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "func-names": 0,
    "prefer-const": 0,
    "prefer-arrow-callback": 0,
    "comma-dangle": 0,
    "id-length": 0,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "default-case": 0,
    "no-underscore-dangle": 0,
    "import/no-unresolved": ["error", { "ignore": ["^mobx"] }]
  }
}
